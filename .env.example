# Motus Environment Configuration
# Copy this file to .env and fill in your actual values

# AI Model API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Weather Integration
WEATHER_API_KEY=your_weatherapi_key_here
WEATHER_API_URL=https://api.weatherapi.com/v1
WEATHER_LOCATION=Chiang Mai, TH

# Google Services (Calendar, Gmail, Drive)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REFRESH_TOKEN=your_google_refresh_token_here
GOOGLE_CALENDAR_ID=primary

# Database
DATABASE_PATH=/Users/yourusername/slashmotus/data/motus.db

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=your_github_username

# Notion Integration (optional)
NOTION_API_KEY=your_notion_integration_token_here
NOTION_DATABASE_ID=your_notion_database_id

# Slack Integration (optional)
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_WORKSPACE=your_workspace_name

# Obsidian Integration
OBSIDIAN_VAULT_PATH=/Users/yourusername/Library/Mobile Documents/iCloud~md~obsidian/Documents
OBSIDIAN_DAILY_NOTES=Daily

# Timezone and Locale
TIMEZONE=Asia/Bangkok
LOCALE=en-US

# Motus Configuration
MOTUS_HOME=/Users/yourusername/slashmotus
MOTUS_DATA_DIR=/Users/yourusername/slashmotus/data
MOTUS_LOG_LEVEL=info
MOTUS_AUTONOMOUS_MODE=true

# Scheduling (24-hour format)
MORNING_BRIEFING_TIME=08:00
EVENING_REVIEW_TIME=21:00
WEEKLY_PLANNING_DAY=Sunday
WEEKLY_PLANNING_TIME=10:00

# Feature Flags
ENABLE_WEATHER=true
ENABLE_CALENDAR=true
ENABLE_EMAIL=true
ENABLE_FINANCE_TRACKING=true
ENABLE_HEALTH_TRACKING=true
ENABLE_NOTIFICATIONS=true

# Security
ENCRYPT_SENSITIVE_DATA=true
SESSION_TIMEOUT_MINUTES=30