{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["name", "description", "agents", "workflows", "integrations"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]{2,30}$",
      "description": "Department name in kebab-case"
    },
    "displayName": {
      "type": "string",
      "minLength": 3,
      "description": "Human-readable department name"
    },
    "description": {
      "type": "string",
      "minLength": 20,
      "description": "Department purpose and scope"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "development"],
      "default": "active"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0"
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "List of agent names in this department"
    },
    "workflows": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of workflow names in this department"
    },
    "integrations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "envVars"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["oauth2", "api-key", "file-system", "database"]
          },
          "envVars": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "description": {
            "type": "string"
          }
        }
      }
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Primary commands for this department"
    },
    "responsibilities": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "tasks": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "workflowSteps": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
