{
  "hooks": [
    {
      "name": "morning-briefing",
      "trigger": "schedule",
      "schedule": "0 8 * * *",
      "command": "/motus life briefing",
      "description": "Daily morning briefing at 8 AM"
    },
    {
      "name": "evening-review", 
      "trigger": "schedule",
      "schedule": "0 21 * * *",
      "command": "/motus life review",
      "description": "Daily evening review at 9 PM"
    },
    {
      "name": "weekly-planning",
      "trigger": "schedule", 
      "schedule": "0 10 * * 0",
      "command": "/motus life plan week",
      "description": "Weekly planning session on Sundays at 10 AM"
    },
    {
      "name": "task-completion",
      "trigger": "event",
      "event": "task.completed",
      "command": "/motus life track goal",
      "description": "Track goal progress when tasks are completed"
    },
    {
      "name": "health-reminder",
      "trigger": "schedule",
      "schedule": "0 */2 * * *",
      "command": "/motus life health check",
      "description": "Health check reminder every 2 hours"
    }
  ]
}